<project name="JkArgs" default="ini" basedir=".">

        <target name="init">
                <mkdir dir="classes" />
				<mkdir dir="lib" />
        </target>

        <target name="clean">
                <delete dir="classes" />
        </target>

        <target name="compile" depends="init">
                <javac srcdir="src" destdir="classes"  debug="off"/>
        </target>

        <target name="run" depends="compile">
                <java classname="pt.ist.ap.a8.JkArgs" >
                        <classpath path="classes/" />
                </java>
        </target>
        <target name="jar" depends="compile">
                <jar destfile="./JkArgs" basedir="classes">
					<zipgroupfileset dir="lib" includes="*.jar" />
                </jar>
        </target>

        <target name="test" depends="compile">
                <java classname="pt.ist.ap.a8.JkArgs" >
                        <classpath path="classes/" />
                </java>
        </target>


</project>
